<h1 class="text-center mt-4">Create a new article</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-12">
            <%= render partial: "shared/errors", locals: { obj: @article } %>
            <%= form_with(scope: :article, url: articles_path, data: { turbo: false }, class:"shadow p-3 mb-3 bg-dark rounded", local: true) do |f| %>
                <div class="form-group row">
                    <%= f.label :title, class:"col-2 col-form-label text-light" %><br/>
                    <div class="col-10">
                        <%= f.text_field :title, class:"form-control shadow rounded", placeholder:"Title of article" %>
                    </div>
                </div>

                <div class="form-group row">
                    <%= f.label :description, class:"col-2 col-form-label text-light" %><br/>
                    <div class="col-10">
                        <%= f.text_area :description, row: 10, class:"form-control shadow rounded", placeholder:"Description" %>
                    </div>
                </div>

                <div class="form-group row">
                    <%= f.label :category, class:"col-2 col-form-label text-light" %><br/>
                    <div class="col-10">
                        <%= f.collection_select(:category_ids, Category.all, :id, :name, 
                        { prompt: "Select your category from the list below" }, { multiple: true, size: 4, class:"custom-select shadow rounded" }) %>
                    </div>
                </div>

                <div class="form-group row justify-content-center">
                    <%= f.submit class:"col-2 btn btn-outline-light btn-lg" %>
                </div>
            <% end %>
            <div class="mb-3">
                <%= link_to '[Return to All Articles]', articles_path, class: "link-danger" %>
            </div>
        </div>
    </div>
</div>
